{
  "name": "ts-events",
  "version": "3.0.1",
  "description": "Various EventEmitter event replacements with synchronous, a-synchronous, and queued events. Made in TypeScript so usable with JavaScript and TypeScript.",
  "main": "./dist/index.js",
  "homepage": "https://github.com/rogierschouten/ts-events",
  "bugs": {
    "url": "https://github.com/rogierschouten/ts-events/issues",
    "email": "github@workingcode.ninja"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rogierschouten/ts-events.git"
  },
  "typings": "./dist/index.d.ts",
  "scripts": {
    "clean": "./node_modules/.bin/rimraf ./dist ./temp",
    "tsc": "./node_modules/.bin/tsc",
    "lint": "./node_modules/.bin/tslint -c ./tslint.json ./src/**/*.ts",
	"build": "npm run lint && npm run tsc",
    "test": "./node_modules/.bin/mocha ./dist/test/test-*.js",
    "cover": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- ./dist/test/*.js",
    "browserify": "node ./browserify.js",
    "karma": "./node_modules/.bin/karma start --single-run",
    "browma": "npm run browserify && npm run karma",
    "all": "npm run clean && npm run build && npm run test && npm run browma"
  },
  "keywords": [
    "Event",
    "Events",
    "Signal",
    "Signals",
    "EventEmitter",
    "event loop",
    "eventloop",
    "event queue",
    "synchronous",
    "a-synchronous",
    "asynchronous",
    "TypeScript",
    "Callback"
  ],
  "author": {
    "name": "Rogier Schouten",
    "email": "github@workingcode.ninja"
  },
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "assert": "^1.3.0",
    "browserify": "^13.0.0",
    "chai": "^2.3.0",
    "glob": "^7.0.0",
    "istanbul": "^0.4.2",
    "karma": "^0.13.21",
    "karma-chrome-launcher": "^0.2.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^1.2.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.2.4",
    "rimraf": "^2.5.2",
    "source-map-support": "^0.2.10",
    "tslint": "^3.3.0",
    "typescript": "^1.7.5",
    "util": "^0.10.3"
  }
}
